<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/skill_selection.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/skill_selection.js" />
    </scripts>
    <Panel class="SkillSelectionRoot" hittest="false">
		<Panel class="SkillMainContainer" hittest="false">
			<Panel class="SkillInfoContainer" hittest="false">
				<Panel id="SelectionTimerContainer" hittest="false">
					<Label id="SelectionTimer" text="80" hittest="false"/>
				</Panel>
				<Panel class="ButtonContainer" hittest="false">
					<Button class="PickButton" id="AcceptButton" onactivate="ConfirmSkillSelection()">
						<Label class="ButtonText" id="AcceptButtonLabel" text="Select" hittest="false"/>
					</Button>
					<Button class="PickButton" id="RandomButton" onactivate="RandomSkillSelection()">
						<Label class="ButtonText" id="RandomButtonLabel" text="Random" hittest="false"/>
					</Button>
				</Panel>
			</Panel>
			<Panel class="SkillRowContainer" id="HeroRowContainer" hittest="false">
			</Panel>
		</Panel>
    </Panel>
</root>